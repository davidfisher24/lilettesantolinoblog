//- carousel caption
mixin carousel-caption(item)
	.carousel-caption
		unless !item.title
			h1 #{item.title}
		unless !item.p
			p #{item.p}
		unless !item.button
			p
				a.btn.btn-lg.btn-primary(href=item.button.url role="button") #{item.button.caption}

//- carousel
mixin carousel(id,items)
	.row
		//.col-md-1.col-lg-1.col-xl-1.col-sm-1.col-xs-1
		//	a.left.carousel-control(href="#carousel-" + id, role="button", data-slide="prev")
		//			span.glyphicon.glyphicon-chevron-left

		.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1.col-xs-10.col-xs-offset-1.col-lg-10.col-lg-offset-1.col-xl-10.col-xl-offset-1
			.carousel.slide(id="carousel-" + id ,data-ride="carousel")
				//- Indicators
				ol.carousel-indicators
					each item,index in items
						if(index === 0)
							li.active(data-target="#carousel-" + id, data-slide-to=index)
						else
							li(data-target="#carousel-" + id, data-slide-to=index)


				//- Wrapper for slides
				.carousel-inner(role="listbox")
					each item,index in items
						if(index === 0)
							.item.active
								div.col-md-4.col-lg-4.col-xl-4.hidden-xs.hidden-sm
									a(href='portfolio/project/' + item.id)
										img(src=item.selectedImage._.image.thumbnail(200,200)).carousel-image.img-responsive
										//+carousel-caption(item)
								div.col-sm-12.col-xs-12.hidden-md.hidden-lg.hidden-xl
									a(href='portfolio/project/' + item.id)
										img(src=item.selectedImage._.image.thumbnail(400,400)).carousel-image.img-responsive

						else
							.item
